<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="BioSmartSuite" parallel="tests" thread-count="3">
	<parameter name="groupReport" value="/DroidReport.html" />
	<parameter name="toMails" value="gnwabude@seamfix.com" />
	<parameter name="myURL"
		value="http://10.1.242.245:7080/selfservice/" />
	<parameter name="gridUrl"
		value="https://selenium.k8.seamfix.com/wd/hub" />
	<parameter name="config" value="data.conf.json" />
	<parameter name="environment" value="chrome" />
	<parameter name="server" value="local" />
	<parameter name="downloadPath" value="/files/" />
	<parameter name="dataEnv" value="prodData" />
	
    <test name="test1">
		<parameter name="email" value="snapshot@seamfix.com" />
		<parameter name="systemPort" value="8228" />
		<parameter name="deviceNo" value="1" />

		<classes>
			<class name="com.seamfix.biosmart210.ForgotPassword">
				<methods>
					<include name="navigateToForgotPassword" />
					<include name="changePasswordWithInvalidUsername" />
					<include name="changePasswordWithValidUsername" />
					<include name="loginWithNewPassword" />
				</methods>
			</class>
			<class name="com.seamfix.biosmart210.Login">
				<methods>
					<include name="usernamePasswordTest" />
					<include name="loginWithFingerprint" />
				</methods>
			</class>
			<class name="com.seamfix.biosmart210.ChangePasswordTest">
				<methods>
					<include name="Login" />
					<include name="navigateToChangePasswordPage" />
					<include name="changeToNewPassword" />
					<include name="loginWithNewPassword" />
					<include name="changeBackToOldPassword" />
				</methods>
			</class>
			<class name="com.seamfix.biosmart210.NotificationsTest">
				<methods>
					<include name="Login" />
					<include name="navigateToNotifications" />
					<include name="viewNotifications" />
				</methods>
			</class>
			<class name="com.seamfix.biosmart210.ReportsTest">
				<methods>
					<include name="Login" />
					<include name="navigateToReportsPage" />
					<include name="reportSummary" />
					<include name="searchParameters" />
				</methods>
			</class>
		</classes>
	</test>
</suite>
